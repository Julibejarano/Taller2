<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Imagen mostrada -->
    <ImageView
        android:id="@+id/imagenSeleccionada"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#DDDDDD"
        android:scaleType="centerCrop"
        android:contentDescription="Imagen seleccionada"
        android:layout_marginBottom="32dp" />

    <!-- Botones: Galería y Cámara -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón Galería -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">

            <ImageButton
                android:id="@+id/btnGaleria"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_galeria"
                android:background="@null"
                android:contentDescription="Abrir galería"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galería"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Botón Cámara -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnCamara"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_camara"
                android:background="@null"
                android:contentDescription="Abrir cámara"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cámara"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
